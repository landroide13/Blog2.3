
<%= render 'shared/errors', obj: @article %>

<div class="row top">
  <div class="col-md-12">
    <%= form_for(@article, :html => {class:'form-horizontal', role:'form'}) do |f| %>
      <div class="form-group row">
        <label for="inputEmail3" class="col-sm-2 col-form-label">
          <%= f.label :title %>
        </label>
        <div class="col-sm-8">    
          <%= f.text_field :title, class:"form-control", placeholder:"Title", autofocus: true %>
        </div>
      </div>

      <div class="form-group row">
        <label for="inputEmail3" class="col-sm-2 col-form-label">    
          <%= f.label :description %>
        </label>
        <div class="col-sm-8">      
          <%= f.text_area :description, class:"form-control", rows:"10", placeholder:"Body Article" %>
        </div>
      </div>  

      <div class="form-group">
        <div class="col-sm-10">  
          <%= f.submit 'Submit', class:"btn btn-primary btn-sm right" %>
        </div>
      </div>    

    <% end %>
  </div>
</div>