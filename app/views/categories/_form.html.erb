
<%= render 'shared/errors', obj: @category %>

<div class="row top">
  <div class="col-md-12">
    <%= form_for(@category, :html => {class:'form-horizontal', role:'form'}) do |f| %>
      <div class="form-group row">
        <label for="inputEmail3" class="col-sm-2 col-form-label">
          <%= f.label :name %>
        </label>
        <div class="col-sm-8">    
          <%= f.text_field :name, class:"form-control", placeholder:"Category name", autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-10">  
          <%= f.submit 'Submit Category', class:"btn btn-primary btn-lg right" %>
        </div>
      </div>    

    <% end %>
  </div>
</div>