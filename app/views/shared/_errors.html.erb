
<% if obj.errors.any? %>
  <div class="row center">
    <div class="col-md-10">
      <div class="alert alert-danger" role="alert">
        <h2 class="alert-heading">
          <%= pluralize(obj.errors.count, 'error')%>
          Prohibited this article from being saved
        </h2>
        <div>
          <ul>
            <% obj.errors.full_messages.each do |msg| %>
              <li><%= msg %></li> 
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>      
<% end %>