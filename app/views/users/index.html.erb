
<h1 class="top" align="center">Listing All our Users</h1>

<% @users.each do |u| %>
  <div align="center" class="row center top">
    <div class="col-8">
      <div class="list-group" role="tablist">
        <li class="list-group-item">
          <div class="card border-secondary mb-3">
            <img class="card-img-top" src="" alt="Card image cap">
            <div class="card-body">
              <h4 class="card-title"><%= link_to u.username, user_path(u)%></h4>
              <p class="card-text"><%= pluralize(u.articles.count, "Article") if u.articles%></p>
            </div>
            <div class="card-footer">
              <small class="text-muted"></small>
            </div>
          </div>
        </li>
      </div>
    </div>  
  </div>  

<% end %>