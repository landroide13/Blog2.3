<h1 align="center">User <%= @user.username %>'s page</h1>

<div class="row top">
  <div class="col-md-4 center">
    <%= gravatar_for @user, size: 150 %>
  </div>
</div>

<h4 class="top" align="center"><%= @user.username %>'s Articles</h4>

<div class="center top">
  <%= will_paginate(@user_articles, :renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer) %>
</div>

<%= render 'articles/article', obj: @user_articles %>



